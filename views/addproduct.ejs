<%- include("partials/header") %>
    <div class="row">
        <h1 style="text-align: center">Add New Product</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/addproduct" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[code]" placeholder="Code">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="product[name]" placeholder="Product Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="product[stock]" placeholder="Stock">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="product[price]" placeholder="Price">
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Product</button>
                </div>
            </form>
            <a href="/dashboard">Go Back</a>
        </div>
    </div>
<%- include("partials/footer") %>